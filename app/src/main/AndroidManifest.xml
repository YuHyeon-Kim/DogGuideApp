<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.hs.dbgus3577e_mirim.dogguideapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        // SplashActivity
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation">
        </activity>

        // BrowserActivity
        <activity
            android:name=".BrowserActivity">
            android:label="@string/but_5"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        // But1Activity
        <activity
            android:name=".But1Activity"
            android:label="@string/but_1"
            android:configChanges="keyboardHidden|orientation">
        </activity>

        // But2Activity
        <activity
            android:name=".But2Activity"
            android:label="@string/but_2"
            android:configChanges="keyboardHidden|orientation">
        </activity>

        // But3Activity
        <activity
            android:name=".But3Activity"
            android:label="@string/but_3"
            android:configChanges="keyboardHidden|orientation">
        </activity>

        // But4Activity
        <activity
            android:name=".But4Activity"
            android:label="@string/but_4"
            android:configChanges="keyboardHidden|orientation">
        </activity>

    </application>

</manifest>